configuration {
  display-drun: "Applications:";
  display-window: "Windows:";
  drun-display-format: "{icon} {name}";
  font: "JetBrainsMono Medium 10";
  modi: "window,run,drun";
  show-icons: true;
  icon-theme: "Papirus";
}

@theme "/usr/share/rofi/themes/sidebar"

* {
  bg: #212121;
  bg-alt: #685742;
  bg-selected: #212121;
  fg: #c9a554;
  fg-alt: #d7c483;

  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}

element {
  padding: 12;
  text-color: @fg;
  background-color: @bg;
}

element selected normal {
  text-color: @fg-alt;
  border-radius: 8;
  border: 0;
  background-color: @bg-alt;
}

element-text {
  background-color: inherit;
  text-color: inherit;
}

element-icon {
  background-color: transparent;
}

entry {
  background-color: @bg-alt;
  padding: 18;
  text-color: @fg;
  border-radius: 8;
}

inputbar {
  margin: 20 10 10 30;
  background-color: #00000000;
  border-color: #00000000;
  children: [entry];
}

listview {
  background-color: @bg;
  columns: 1;
  lines: 8;
}

mainbox {
  background-color: @bg;
  children: [inputbar, listview];
}

prompt {
  background-color: @bg;
  enabled: true;
  padding: 12 0 0 12;
  text-color: @fg;
}

window {
  transparency: "real";
  margin: 40 0 20 10;
  border-radius: 8;
  border: 1;
  border-color: @bg-alt;
}
